<?xml version="1.0" encoding="utf-8"?>
<mx:Canvas xmlns:mx="http://www.adobe.com/2006/mxml" width="208" height="98"  borderStyle="solid" themeColor="#FF1200">
	<mx:Script>
		<![CDATA[
		   import com.fc.lami.Messages.PlayerData;
		   
			[Bindable]
			public var player:PlayerData;			
			public var nextOtherPlayer_Cpt:OtherPlayer_Cpt;
			
			[Bindable]
			public var seat:String
			
		    [Bindable]
			public var ready:Boolean
			
			
			[Bindable]
			public var gameing:Boolean
			
			//破冰状况
			[Bindable]
			public var pobing:Boolean = false;
			
			
			public function reset():void{
				player = null;
				seat = null;
				ready = false;
				gameing = false;
			}
			
		]]>
	</mx:Script>
	<mx:Label x="73" y="10" text="{player.player_id==-1?'空闲':'ID:'+player.player_id}" color="#FEFEFE"/>
	<mx:Label x="66" y="38" text="{seat}" color="#FEFEFE"/>
	<mx:Label x="126" y="38" text="{pobing?'已破冰':'未破冰'}" color="#FEFEFE"/>
	<mx:Label x="66" y="68" text="{gameing?'游戏中':'等待中'}" color="#FEFEFE"/>
	
</mx:Canvas>

<project name="xingcloud" basedir="." default="all" >
	<property name="src.dir" location="src/"/>
	<property name="build.dir" location="bin/"/>
	<property name="lib.dir" location="WebContent/WEB-INF/lib/"/>
	<!-- 请在 deploy.dir 中指定要发布war的目标目录，比如tomcat目录下的webapps，默认为项目根目录 -->
	<property name="deploy.dir" location="E:\\Develop\\apache-tomcat-6.0.32\\webapps\\"/>
	<property name="project.name" value="game"/>
	<path id="classpath.dir"> 
		<fileset dir="${lib.dir}">
			<include name="**/*.jar"/>
		</fileset>
	</path>
	<target name="clean">
		<delete includeemptydirs="true" failonerror="false">
			<fileset dir="build"/>
			<fileset file="${lib.dir}/${project.name}.jar"/>
		    <fileset file="${deploy.dir}/${project.name}.war"/>
		</delete>
	</target>
	<target name="compile">
		<mkdir dir="${build.dir}"/>
		<mkdir dir="${build.dir}/classes"/>
		<javac encoding="utf-8" destdir="${build.dir}/classes" source="1.6" target="1.6" debug="true"
            deprecation="false" optimize="false" failonerror="true">
            <src path="${src.dir}"/>
            <classpath refid="classpath.dir"/>
		</javac>
		<copy todir="${build.dir}/classes">
			<fileset dir="${src.dir}" excludes="**/*.java"/>
		</copy>
	</target>
	<target name="build">
		<jar destfile="${lib.dir}/${project.name}.jar">
	    	<fileset dir="${build.dir}/classes" />
	    </jar>
	</target>
	<target name="deploy">
		<war destfile="${deploy.dir}/${project.name}.war" webxml="WebContent/WEB-INF/web.xml">
		  <fileset dir="WebContent/"/>
		</war>
		<delete includeemptydirs="true" failonerror="false">
			<fileset file="${lib.dir}/${project.name}.jar"/>
		</delete>
	</target>
	<target name="all" depends="clean,compile,build,deploy">
	</target>
</project>